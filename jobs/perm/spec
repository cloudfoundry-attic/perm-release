---
name: perm
templates:
  bpm.yml.erb: config/bpm.yml
  dns_health_check.erb: bin/dns_health_check
packages:
- perm

provides:
- name: perm
  type: perm
  properties:
  - listen_port

properties:
  listen_hostname:
    description: Hostname on which to listen for gRPC traffic
    default: 0.0.0.0
  listen_port:
    description: Port on which to listen for gRPC traffic
    default: 6283
  log_level:
    description: The log level for the Perm server.
    default: info
