---
name: perm
templates:
  bpm.yml.erb: config/bpm.yml
packages:
- perm

provides:
- name: perm
  type: perm
  properties:
  - listen_port

properties:
  listen_hostname:
    description: Hostname on which to listen for gRPC traffic
    default: 0.0.0.0
  listen_port:
    description: Port on which to listen for gRPC traffic
    default: 6283
