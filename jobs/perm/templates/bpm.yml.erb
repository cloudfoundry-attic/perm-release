processes:
  - name: perm
    executable: /var/vcap/jobs/perm/bin/perm

    args:
    - serve
    - --statsd-hostname
    - localhost
    - --statsd-port
    - 8125
    - --listen-hostname
    - 0.0.0.0
    - --listen-port
    - <%= p('port') %>
    - --max-connection-idle
    - <%= p('max_connection_idle_time') %>
    - --log-level
    - <%= p('log_level') %>
    - --tls-certificate
    - /var/vcap/jobs/perm/config/certs/tls.crt
    - --tls-key
    - /var/vcap/jobs/perm/config/certs/tls.key
    - --db-driver
    - <%= p('sql.db.driver') %>
    - --db-host
    - <%= p('sql.db.host') %>
    - --db-port
    - <%= p('sql.db.port') %>
    - --db-schema
    - <%= p('sql.db.schema') %>
    - --db-username
    - <%= p('sql.db.username') %>
    - --db-password
    - <%= p('sql.db.password') %>
    - --db-tls-required
    - <%= p('sql.tls.required') %>
    - --db-tls-root-ca
    - /var/vcap/jobs/perm/config/certs/sql_tls_ca.crt
    - --db-tuning-connection-max-lifetime
    - <%= p('sql.tuning.connection_max_lifetime') %>
    - --audit-file-path
    - <%= p('log_audit_events') ? "/var/vcap/sys/log/perm/audit.log" : "/dev/null" %>
    <% if_p('feature_flags.auth') do |auth| %>
      <% if auth %>
    - --require-auth
    - --oauth2-url
    - https://<%= p('uaa.hostname') %>:<%= p('uaa.port') %>
    - --oauth2-certificate-authority
    - /var/vcap/jobs/perm/config/certs/uaa_ca.crt
      <% end %>
    <% end %>

    limits:
      memory: 256M
      processes: 100
      open_files: 524
