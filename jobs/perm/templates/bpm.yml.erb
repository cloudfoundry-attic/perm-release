processes:
  perm:
    executable: /var/vcap/packages/perm/bin/perm

    args:
    - --listen-hostname
    - <%= p('listen_hostname') %>
    - --listen-port
    - <%= p('listen_port') %>
    - --log-level
    - <%= p('log_level') %>
    - --tls-certificate
    - /var/vcap/jobs/perm/config/certs/tls.crt
    - --tls-key
    - /var/vcap/jobs/perm/config/certs/tls.key

    env: []

    limits:
      memory: 256M
      processes: 100
      open_files: 524

    volumes: []

    hooks: {}
