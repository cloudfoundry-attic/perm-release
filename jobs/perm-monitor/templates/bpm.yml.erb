processes:
  - name: perm-monitor
    executable: /var/vcap/jobs/perm-monitor/bin/perm-monitor

    args:
    - --log-level
    - <%= p('log_level') %>
    - --perm-hostname
    - <%= p('perm.hostname') %>
    - --perm-port
    - <%= link('perm').p('port') %>
    - --perm-ca-certificate
    - /var/vcap/jobs/perm-monitor/config/certs/perm_ca.crt
    - --statsd-hostname
    - <%= p('statsd.hostname') %>
    - --statsd-port
    - <%= p('statsd.port') %>
    - --frequency
    - <%= p('probe.frequency') %>
    - --request-duration
    - <%= p('probe.request_duration') %>
    - --timeout
    - <%= p('probe.timeout') %>

    limits:
      memory: 256M
      processes: 100
      open_files: 524
